{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "module": "esnext",
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "noEmit": true
  }
}
